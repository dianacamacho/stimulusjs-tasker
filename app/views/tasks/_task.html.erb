<div class="list-group-item" data-controller="task">
  <div class="custom-control custom-checkbox">
    <!-- data-id will send "id" as attribute in element.dataset.id -->
    <input  type="checkbox"
            class="custom-control-input"
            id="<%= dom_id(task) %>"
            data-reflex="change->TaskReflex#toggle"
            data-id="<%= task.id %>"
            <%= "checked" if task.complete? %>
    >
    <label for="<%= dom_id(task) %>" class="custom-control-label">
      <% if task.complete? %>
        <del><%= task.name %></del>
      <% else %>
        <%= task.name %>
      <% end %>
    </label>
  </div>
</div>
